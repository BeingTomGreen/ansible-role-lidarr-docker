#jinja2: trim_blocks: True, lstrip_blocks: True

services:
  lidarr:
    {% if lidarr_docker_cap_add | length > 0 %}
    cap_add:
      {% for capability in lidarr_docker_cap_add %}
      - {{ capability }}
      {% endfor %}
    {% endif %}
    {% if lidarr_docker_cap_drop | length > 0 %}
    cap_drop:
      {% for capability in lidarr_docker_cap_drop %}
      - {{ capability }}
      {% endfor %}
    {% endif %}
    container_name: {{ lidarr_docker_container_name }}
    {% if lidarr_docker_depends_on | length > 0 %}
    depends_on:
      {% for dep in lidarr_docker_depends_on %}
      - {{ dep }}
      {% endfor %}
    {% endif %}
    {% if lidarr_docker_devices %}
    devices:
      {% for device in lidarr_docker_devices %}
      - {{ device }}
      {% endfor %}
    {% endif %}
    environment:
      PUID: "{{ lidarr_docker_env_puid }}"
      PGID: "{{ lidarr_docker_env_pgid }}"
      TZ: "{{ lidarr_docker_env_timezone }}"
      {% if lidarr_docker_extra_environment_vars | length > 0 %}
      {% for env, value in lidarr_docker_extra_environment_vars.items() %}
      {{ env }}: "{{ value }}"
      {% endfor %}
      {% endif %}
    image: {{ lidarr_docker_image }}:{{ lidarr_docker_image_tag }}
    {% if lidarr_docker_labels | length > 0 %}
    labels:
      {% for label, value in lidarr_docker_labels.items() %}
      {{ label }}: "{{ value }}"
      {% endfor %}
    {% endif %}
    {% if lidarr_docker_external_networks | length > 0 and not (lidarr_docker_network_mode | default('')) %}
    networks:
      {% for net in lidarr_docker_external_networks %}
      - {{ net }}
      {% endfor %}
    {% elif lidarr_docker_network_mode %}
    network_mode: {{ lidarr_docker_network_mode | default('host') }}
    {% endif %}
    {% if lidarr_docker_ports | length > 0 and not (lidarr_docker_network_mode | default('')) %}
    ports:
      {% for port in lidarr_docker_ports %}
      - {{ port }}
      {% endfor %}
    {% endif %}
    pull_policy: {{ lidarr_docker_pull_policy }}
    restart: {{ lidarr_docker_restart_policy }}
    volumes:
      - {{ lidarr_docker_base_directory }}/config:/config
      {% if lidarr_docker_additional_volumes | length > 0 %}
      {% for vol in lidarr_docker_additional_volumes %}
      - {{ vol }}
      {% endfor %}
      {% endif %}
{% if lidarr_docker_external_networks | length > 0 and not (lidarr_docker_network_mode | default('')) %}

networks:
  {% for net in lidarr_docker_external_networks %}
  {{ net }}:
    external: true
  {% endfor %}
{% endif %}